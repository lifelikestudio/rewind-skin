<main class="wrapper wrapper--sm account account--addresses">
  {%- paginate customer.addresses by 5 -%}
    <section class="wrapper account__inner" data-customer-addresses>
      <div class="account-inner__top-half">
        <div class="account__form-header">
          <h1 class="main-heading main-heading--account-form">{{ 'customer.addresses.title' | t }}</h1>
          <a href="{{ routes.account_url }}">
            {{ 'customer.account.return' | t }}
          </a>
        </div>

        <div class="addresses__add-group" data-address>
          <button
            type="button"
            aria-expanded="false"
            aria-controls="AddAddress"
            class="all-caps btn btn--secondary btn--account"
          >
            {{ 'customer.addresses.add_new' | t }}
          </button>
          <div id="AddAddress">
            <h2 class="main-heading main-heading--account-sub" id="AddressNewHeading">
              {{ 'customer.addresses.add_new' | t }}
            </h2>
            {%- form 'customer_address',
              customer.new_address,
              aria-labelledBy: 'AddressNewHeading',
              class: 'account__form'
            -%}
              <div class="account__form-inner">
                <div class="account__field-group--half">
                  <div class="account__field-group">
                    <input
                      type="text"
                      id="AddressFirstNameNew"
                      name="address[first_name]"
                      value="{{ form.first_name }}"
                      autocomplete="given-name"
                      placeholder="{{ 'customer.addresses.first_name' | t }}"
                      class="main-body account__input-field"
                    >
                    <label for="AddressFirstNameNew" class="visually-hidden">
                      {{- 'customer.addresses.first_name' | t -}}
                    </label>
                  </div>
                  <div class="account__field-group">
                    <input
                      type="text"
                      id="AddressLastNameNew"
                      name="address[last_name]"
                      value="{{ form.last_name }}"
                      autocomplete="family-name"
                      placeholder="{{ 'customer.addresses.last_name' | t }}"
                      class="main-body account__input-field"
                    >
                    <label for="AddressLastNameNew" class="visually-hidden">
                      {{- 'customer.addresses.last_name' | t -}}
                    </label>
                  </div>
                </div>
                <div class="account__field-group">
                  <input
                    type="text"
                    id="AddressCompanyNew"
                    name="address[company]"
                    value="{{ form.company }}"
                    autocomplete="organization"
                    placeholder="{{ 'customer.addresses.company' | t }}"
                    class="main-body account__input-field"
                  >
                  <label for="AddressCompanyNew" class="visually-hidden">{{ 'customer.addresses.company' | t }}</label>
                </div>
                <div class="account__field-group">
                  <input
                    type="text"
                    id="AddressAddress1New"
                    name="address[address1]"
                    value="{{ form.address1 }}"
                    autocomplete="address-line1"
                    placeholder="{{ 'customer.addresses.address1' | t }}"
                    class="main-body account__input-field"
                  >
                  <label for="AddressAddress1New" class="visually-hidden">
                    {{- 'customer.addresses.address1' | t -}}
                  </label>
                </div>
                <div class="account__field-group">
                  <input
                    type="text"
                    id="AddressAddress2New"
                    name="address[address2]"
                    value="{{ form.address2 }}"
                    autocomplete="address-line2"
                    placeholder="{{ 'customer.addresses.address2' | t }}"
                    class="main-body account__input-field"
                  >
                  <label for="AddressAddress2New" class="visually-hidden">
                    {{- 'customer.addresses.address2' | t -}}
                  </label>
                </div>
                <div class="account__field-group">
                  <input
                    type="text"
                    id="AddressCityNew"
                    name="address[city]"
                    value="{{ form.city }}"
                    autocomplete="address-level2"
                    placeholder="{{ 'customer.addresses.city' | t }}"
                    class="main-body account__input-field"
                  >
                  <label for="AddressCityNew" class="visually-hidden">{{ 'customer.addresses.city' | t }}</label>
                </div>
                <div class="account__field-group account__field-group--select">
                  <label for="AddressCountryNew" class="visually-hidden">{{ 'customer.addresses.country' | t }}</label>
                  <div class="select">
                    <select
                      id="AddressCountryNew"
                      name="address[country]"
                      data-default="{{ form.country }}"
                      autocomplete="country"
                      class="main-body account__input-field account__input-field--select"
                    >
                      {{ country_option_tags }}
                    </select>
                  </div>
                </div>
                <div
                  class="main-body account__field-group account__field-group--select"
                  id="AddressProvinceContainerNew"
                  style="display: none"
                >
                  <label for="AddressProvinceNew" class="visually-hidden">
                    {{- 'customer.addresses.province' | t -}}
                  </label>
                  <div class="select">
                    <select
                      id="AddressProvinceNew"
                      name="address[province]"
                      data-default="{{ form.province }}"
                      autocomplete="address-level1"
                      class="account__input-field account__input-field--select"
                    ></select>
                  </div>
                </div>
                <div class="account__field-group">
                  <input
                    type="text"
                    id="AddressZipNew"
                    name="address[zip]"
                    value="{{ form.zip }}"
                    autocapitalize="characters"
                    autocomplete="postal-code"
                    placeholder="{{ 'customer.addresses.zip' | t }}"
                    class="main-body account__input-field"
                  >
                  <label for="AddressZipNew" class="visually-hidden">{{ 'customer.addresses.zip' | t }}</label>
                </div>
                <div class="account__field-group">
                  <input
                    type="tel"
                    id="AddressPhoneNew"
                    name="address[phone]"
                    value="{{ form.phone }}"
                    autocomplete="tel"
                    placeholder="{{ 'customer.addresses.phone' | t }}"
                    class="main-body account__input-field"
                  >
                  <label for="AddressPhoneNew" class="visually-hidden">{{ 'customer.addresses.phone' | t }}</label>
                </div>
                <div class="account__field-group account__field-group--checkbox">
                  {{ form.set_as_default_checkbox }}
                  <label for="address_default_address_new" class="main-body">
                    {{- 'customer.addresses.set_default' | t -}}
                  </label>
                </div>
                <div class="account__form-inner account__form-inner--btns">
                  <button class="all-caps btn btn--secondary btn--account">{{ 'customer.addresses.add' | t }}</button>
                  <button class="all-caps btn btn--primary btn--account" type="reset">
                    {{ 'customer.addresses.cancel' | t }}
                  </button>
                </div>
              </div>
            {%- endform -%}
          </div>
        </div>
      </div>

      <ul class="account__address-list" role="list">
        {%- for address in customer.addresses -%}
          <li class="account__address-list-item" data-address>
            <div class="account__edit-address-header-group">
              {%- if address == customer.default_address -%}
                <h2 class="main-heading main-heading--account-sub is--edit-address">
                  {{ 'customer.addresses.default' | t }}
                </h2>
              {%- endif -%}
              <div class="main-body is--indent">{{ address | format_address }}</div>
            </div>
            <div class="account__form-inner account__form-inner--btns is--outside-form addresses__edit-group">
              <button
                type="button"
                id="EditFormButton_{{ address.id }}"
                aria-label="{{ 'customer.addresses.edit_address' | t }} {{ forloop.index }}"
                aria-controls="EditAddress_{{ address.id }}"
                aria-expanded="false"
                data-address-id="{{ address.id }}"
                class="all-caps btn btn--secondary btn--account"
              >
                {{ 'customer.addresses.edit' | t }}
              </button>
              <button
                type="button"
                aria-label="{{ 'customer.addresses.delete' | t }} {{ forloop.index }}"
                data-target="{{ address.url }}"
                data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
                class="all-caps btn btn--primary btn--account"
              >
                {{ 'customer.addresses.delete' | t }}
              </button>
              <div class="account__edit-address-group" id="EditAddress_{{ address.id }}">
                <h2 class="main-heading main-heading--account-sub is--edit-address">
                  {{ 'customer.addresses.edit_address' | t }}
                </h2>
                {%- form 'customer_address', address, class: 'account__form' -%}
                  <div class="account__form-inner">
                    <div class="account__field-group">
                      <input
                        type="text"
                        id="AddressFirstName_{{ form.id }}"
                        name="address[first_name]"
                        value="{{ form.first_name }}"
                        autocomplete="given-name"
                        placeholder="{{ 'customer.addresses.first_name' | t }}"
                        class="main-body account__input-field"
                      >
                      <label for="AddressFirstName_{{ form.id }}" class="visually-hidden">
                        {{- 'customer.addresses.first_name' | t -}}
                      </label>
                    </div>
                    <div class="account__field-group">
                      <input
                        type="text"
                        id="AddressLastName_{{ form.id }}"
                        name="address[last_name]"
                        value="{{ form.last_name }}"
                        autocomplete="family-name"
                        placeholder="{{ 'customer.addresses.last_name' | t }}"
                        class="main-body account__input-field"
                      >
                      <label for="AddressLastName_{{ form.id }}" class="visually-hidden">
                        {{- 'customer.addresses.last_name' | t -}}
                      </label>
                    </div>
                    <div class="account__field-group">
                      <input
                        type="text"
                        id="AddressCompany_{{ form.id }}"
                        name="address[company]"
                        value="{{ form.company }}"
                        autocomplete="organization"
                        placeholder="{{ 'customer.addresses.company' | t }}"
                        class="main-body account__input-field"
                      >
                      <label for="AddressCompany_{{ form.id }}" class="visually-hidden">
                        {{- 'customer.addresses.company' | t -}}
                      </label>
                    </div>
                    <div class="account__field-group">
                      <input
                        type="text"
                        id="AddressAddress1_{{ form.id }}"
                        name="address[address1]"
                        value="{{ form.address1 }}"
                        autocomplete="address-line1"
                        placeholder="{{ 'customer.addresses.address1' | t }}"
                        class="main-body account__input-field"
                      >
                      <label for="AddressAddress1_{{ form.id }}" class="visually-hidden">
                        {{- 'customer.addresses.address1' | t -}}
                      </label>
                    </div>
                    <div class="account__field-group">
                      <input
                        type="text"
                        id="AddressAddress2_{{ form.id }}"
                        name="address[address2]"
                        value="{{ form.address2 }}"
                        autocomplete="address-line2"
                        placeholder="{{ 'customer.addresses.address2' | t }}"
                        class="main-body account__input-field"
                      >
                      <label for="AddressAddress2_{{ form.id }}" class="visually-hidden">
                        {{- 'customer.addresses.address2' | t -}}
                      </label>
                    </div>
                    <div class="account__field-group">
                      <input
                        type="text"
                        id="AddressCity_{{ form.id }}"
                        name="address[city]"
                        value="{{ form.city }}"
                        autocomplete="address-level2"
                        placeholder="{{ 'customer.addresses.city' | t }}"
                        class="main-body account__input-field"
                      >
                      <label for="AddressCity_{{ form.id }}" class="visually-hidden">
                        {{- 'customer.addresses.city' | t -}}
                      </label>
                    </div>
                    <div class="account__field-group account__field-group--select">
                      <label for="AddressCountry_{{ form.id }}" class="visually-hidden">
                        {{ 'customer.addresses.country' | t }}
                      </label>
                      <div class="select">
                        <select
                          id="AddressCountry_{{ form.id }}"
                          name="address[country]"
                          data-address-country-select
                          data-default="{{ form.country }}"
                          data-form-id="{{ form.id }}"
                          autocomplete="country"
                          class="main-body account__input-field account__input-field--select"
                        >
                          {{ all_country_option_tags }}
                        </select>
                      </div>
                    </div>
                    <div
                      class="account__field-group account__field-group--select"
                      id="AddressProvinceContainer_{{ form.id }}"
                      style="display:none;"
                    >
                      <label for="AddressProvince_{{ form.id }}" class="visually-hidden">
                        {{ 'customer.addresses.province' | t }}
                      </label>
                      <div class="select">
                        <select
                          id="AddressProvince_{{ form.id }}"
                          name="address[province]"
                          data-default="{{ form.province }}"
                          autocomplete="address-level1"
                          class="main-body account__input-field account__input-field--select"
                        ></select>
                      </div>
                    </div>
                    <div class="account__field-group">
                      <input
                        type="text"
                        id="AddressZip_{{ form.id }}"
                        name="address[zip]"
                        value="{{ form.zip }}"
                        autocapitalize="characters"
                        autocomplete="postal-code"
                        placeholder="{{ 'customer.addresses.zip' | t }}"
                        class="main-body account__input-field"
                      >
                      <label for="AddressZip_{{ form.id }}" class="visually-hidden">
                        {{- 'customer.addresses.zip' | t -}}
                      </label>
                    </div>
                    <div class="account__field-group">
                      <input
                        type="tel"
                        id="AddressPhone_{{ form.id }}"
                        name="address[phone]"
                        value="{{ form.phone }}"
                        autocomplete="tel"
                        placeholder="{{ 'customer.addresses.phone' | t }}"
                        class="main-body account__input-field"
                      >
                      <label for="AddressPhone_{{ form.id }}" class="visually-hidden">
                        {{- 'customer.addresses.phone' | t -}}
                      </label>
                    </div>
                    <div class="account__field-group account__field-group--checkbox">
                      {{ form.set_as_default_checkbox }}
                      <label for="address_default_address_{{ form.id }}" class="main-body">
                        {{ 'customer.addresses.set_default' | t }}
                      </label>
                    </div>
                    <div class="account__form-inner account__form-inner--btns is--outside-form">
                      <button class="all-caps btn btn--secondary btn--account">
                        {{ 'customer.addresses.update' | t }}
                      </button>
                      <button class="all-caps btn btn--primary btn--account" type="reset">
                        {{ 'customer.addresses.cancel' | t }}
                      </button>
                    </div>
                  </div>
                {%- endform -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>

      {%- if paginate.pages > 1 -%}
        {%- if paginate.parts.size > 0 -%}
          <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
            <ul role="list">
              {%- if paginate.previous -%}
                <li>
                  <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                    <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                      <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                    </svg>
                  </a>
                </li>
              {%- endif -%}

              {%- for part in paginate.parts -%}
                <li>
                  {%- if part.is_link -%}
                    <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                      {{- part.title -}}
                    </a>
                  {%- else -%}
                    {%- if part.title == paginate.current_page -%}
                      <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                        {{- part.title -}}
                      </span>
                    {%- else -%}
                      <span>{{ part.title }}</span>
                    {%- endif -%}
                  {%- endif -%}
                </li>
              {%- endfor -%}

              {%- if paginate.next -%}
                <li>
                  <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                    <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                      <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                    </svg>
                  </a>
                </li>
              {%- endif -%}
            </ul>
          </nav>
        {%- endif -%}
      {%- endif -%}
    </section>
  {%- endpaginate -%}
</main>
