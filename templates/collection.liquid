  {% assign media_file = collection.metafields.custom.featured_media.value | first %}

  {% if media_file.media_type == 'video' %}
    <section data-block="collections-hero" class="relative w-full sm:aspect-7/5 md:aspect-2/1 aspect-4/5 overflow-hidden">
      <video
        class="absolute inset-0 w-full h-full object-cover"
        autoplay
        muted
        loop
        playsinline>
        {% comment %} Use the highest quality MP4 source available {% endcomment %}
        {% for source in media_file.sources %}
          {% if source.format == 'mp4' %}
            <source src="{{ source.url }}" type="{{ source.mime_type }}">
          {% endif %}
        {% endfor %}
        {% comment %} Fallback image if video fails to load {% endcomment %}
        <img
          src="{{ media_file.preview_image.src }}"
          alt="{{ collection.title }}"
          class="w-full h-full object-cover">
      </video>
    </section>
  {% else %}
    <section
      data-block="collections-hero"
      class="bg-cover bg-center w-full sm:aspect-7/5 md:aspect-2/1 aspect-4/5"
      style="background-image: url('{{ media_file | image_url }}');"></section>
  {% endif %}

