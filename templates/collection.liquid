                    src="{{ image | img_url: '780x1170' }}"
                    width="780"
                    height="1170"
                    loading="lazy">
                  {% break %}
                {% endif %}
              {% endfor %}
            </a>
          {% endfor %}
        {% endfor %}

        <div class="pagination">
          {% if paginate.previous %}
            <a class="all-caps" href="{{ paginate.previous.url }}">Previous</a>
