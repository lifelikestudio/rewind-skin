            class="all-caps drawer__header-action"
            id="brands-close">
            Close
          </button>
        </div>
        <div class="drawer__container drawer__menu">
          <ul class="drawer__links-list">
            {%- for collection in collections -%}
              {%- if collection.metafields.custom.parent_collection == 'brands' -%}
                <li class="all-caps drawer__link filter-group-options__label">
                  <a href="{{ collection.url }}">{{ collection.title }}</a>
                </li>
              {%- endif -%}
            {%- endfor -%}
