<script type="text/javascript">
  // Add this function after your variant handling code
  
  // Update the button text and price when subscription is selected
  function updateButtonWithSubscriptionPrice(sellingPlan) {
    // Get currently selected variant
    const selectedVariantInput = document.querySelector('input[name="id"]:checked') || 
                                document.querySelector('input[name="id"]');
    if (!selectedVariantInput) return;
    
    const variantId = selectedVariantInput.value;
    const addToCartBtn = document.querySelector(`button[name="add-to-cart-${variantId}"]`);
    if (!addToCartBtn) return;
    
    // Get the button text and price spans
    const textSpan = addToCartBtn.querySelector('span:first-child');
    const priceSpan = addToCartBtn.querySelector('span:last-child');
    
    if (!sellingPlan) {
      // Reset to one-time purchase
      if (textSpan) textSpan.textContent = 'Add to Bag';
      
      // Reset to original price
      if (priceSpan) {
        const product = {{ product | json }};
        const variant = product.variants.find(v => v.id.toString() === variantId.toString());
        
        if (variant) {
          if (variant.compare_at_price > variant.price) {
            priceSpan.innerHTML = `
              <del>{{ shop.money_with_currency_format | replace: '{{amount}}', '${(variant.compare_at_price/100).toFixed(2)}' }}</del>
              <ins>{{ shop.money_with_currency_format | replace: '{{amount}}', '${(variant.price/100).toFixed(2)}' }}</ins>
            `;
          } else {
            priceSpan.innerHTML = `{{ shop.money_with_currency_format | replace: '{{amount}}', '${(variant.price/100).toFixed(2)}' }}`;
          }
        }
      }
      
      console.log("Reset button to one-time purchase");
      return;
    }
    
    // Change button text for subscription
    if (textSpan) {
      textSpan.textContent = 'Subscribe & Save';
    }
    
    // Update price if we have the selling plan details
    if (priceSpan && sellingPlan) {
      console.log("Subscription selling plan:", sellingPlan);
      
      try {
        // Get the current variant details
        const product = {{ product | json }};
        const variant = product.variants.find(v => v.id.toString() === variantId.toString());
        
        if (!variant) {
          console.error("Could not find variant with ID:", variantId);
          return;
        }
        
        let subscriptionPrice = variant.price;
        let discountApplied = false;
        
        // If selling plan has discount info, calculate the discounted price
        if (sellingPlan.price_adjustments && sellingPlan.price_adjustments.length > 0) {
          const adjustment = sellingPlan.price_adjustments[0];
          discountApplied = true;
          
          console.log("Found price adjustment:", adjustment);
          
          if (adjustment.value_type === 'percentage') {
            // Percentage discount
            const discountPercent = adjustment.value;
            subscriptionPrice = variant.price * (1 - (discountPercent / 100));
            console.log(`Applied ${discountPercent}% discount: ${variant.price} → ${subscriptionPrice}`);
          } else if (adjustment.value_type === 'fixed_amount') {
            // Fixed amount discount
            subscriptionPrice = variant.price - adjustment.value;
            console.log(`Applied fixed discount of ${adjustment.value}: ${variant.price} → ${subscriptionPrice}`);
          } else if (adjustment.value_type === 'price') {
            // Direct price override
            subscriptionPrice = adjustment.value;
            console.log(`Applied direct price: ${subscriptionPrice}`);
          }
        } else if (sellingPlan.price !== undefined) {
          // Some selling plans directly provide the price
          subscriptionPrice = sellingPlan.price;
          discountApplied = subscriptionPrice < variant.price;
          console.log(`Using direct price from selling plan: ${subscriptionPrice}`);
        }
        
        // Format and display the price
        const formattedSubscriptionPrice = `{{ shop.money_with_currency_format | replace: '{{amount}}', '${(subscriptionPrice/100).toFixed(2)}' }}`;
        
        if (discountApplied) {
          // Show original price with strikethrough if there's a discount
          const formattedOriginalPrice = `{{ shop.money_with_currency_format | replace: '{{amount}}', '${(variant.price/100).toFixed(2)}' }}`;
          priceSpan.innerHTML = `<del>${formattedOriginalPrice}</del> <ins>${formattedSubscriptionPrice}</ins>`;
          console.log(`Updated button with discount: ${formattedOriginalPrice} → ${formattedSubscriptionPrice}`);
        } else {
          // Just show the subscription price
          priceSpan.innerHTML = formattedSubscriptionPrice;
          console.log(`Updated button price: ${formattedSubscriptionPrice}`);
        }
      } catch (err) {
        console.error("Error updating button with subscription price:", err);
      }
    }
  }
  
  // Add this to your event listeners section
  window.addEventListener("subify:sellingPlanChange", function(event) {
    console.log("Selling plan changed:", event.detail);
    
    // Get the selling plan data
    const { targetProductId, selectedSellingPlan } = event.detail;
    
    // Update selling plan input for cart submission
    const sellingPlanInput = document.querySelector('input[name="selling_plan"]');
    if (sellingPlanInput) {
      sellingPlanInput.value = selectedSellingPlan ? selectedSellingPlan.id : '';
      console.log("Updated selling plan input value:", sellingPlanInput.value);
    }
    
    // Update button text and price
    updateButtonWithSubscriptionPrice(selectedSellingPlan);
  });
</script>