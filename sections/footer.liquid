          <h3 class="all-caps alt-nav-heading">{{ link.title }}</h3>
          {% if link.links.size > 0 %}
            <ul>
              {% for child_link in link.links %}
                <li>
                  {% if child_link.title == 'Contact' %}
                    <p id="contact-trigger" class="all-caps link--alt-nav">
                      {{- child_link.title -}}
                    </p>
                  {% else %}
                    <a class="all-caps link--alt-nav" href="{{ child_link.url }}">{{ child_link.title }}</a>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
