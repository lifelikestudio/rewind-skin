  </div>
  <div class="main-footer__row">
    <nav class="main-footer__row-container wrapper wrapper--lg">
      {% assign footer_menu = linklists.footer %}
      {% assign last_link_list = footer_menu.links.last %}
      <ul>
        {% for link in last_link_list.links %}
          <li>
            <a class="all-caps link--alt-nav link--utility" href="
                {%- if link.title == 'Account' -%}
                  {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                      {{ routes.account_url }}
                    {% else %}
                      {{ routes.account_login_url }}
                    {% endif %}
                  {% endif %}
                {%- else -%}
                  {{ link.url }}
                {%- endif -%}
              ">
              {{- link.title -}}
            </a>
          </li>
        {% endfor %}
      </ul>
      {% assign footer_menu = linklists.footer %}
      {% assign last_parent_link = footer_menu.links.last %}
      {% assign num_child_links = last_parent_link.links.size %}
      {% assign start_index = num_child_links | minus: 2 %}
      <ul>
        <li>
          <p class="all-caps link--alt-nav main-footer__copyright">
            ©
            <span id="copyright-year-desktop"></span>
            Rewind Skin
          </p>
        </li>
      {% comment %}
        {% for child_link in last_parent_link.links offset: start_index %}
        <li>
        <a class="all-caps link--alt-nav link--utility" href="{{ child_link.url }}">{{ child_link.title }}</a>
        </li>
        {% endfor %}
      {% endcomment %}
      </ul>
    </nav>
    <div style="display: none;" class="main-footer__row-container">
      <div class="wrapper wrapper--lg">
        <a
          href="mailto:projects@lifelike.digital"
          rel="noopener noreferrer"
          class="all-caps main-footer__made-by">Made by Lifelike</a>
      </div>
      <div class="popover"></div>
    </div>
  </div>
</footer>